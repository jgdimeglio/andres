<!DOCTYPE html>
<html lang="en-US">
	<head>
    <meta charset="utf-8">
		<title>Andres</title>
		<%= stylesheet_link_tag '/assets/application.css' %>
	</head>
	<body>
		<div class="container">
      <div class="masthead">
      	<div class="container">
      	<div class="app-title">
      	<h1>Andres </h1>
      	</div>
      	<div class="profile"> 
						<% if signed_in? %>
							<%= current_user.email %>
						<% end %>
				</div>
				</div>
        <div class="navbar">
          <div class="navbar-inner">
            <div class="container">
              <ul class="nav">
                <li><%= link_to 'Home', url_for(:home, :index) %></li>
             					<% if signed_in? %>	
								<li><%= link_to 'New Event', url_for(:events, :new) %></li>
                                                                <li><%= link_to 'My Events', url_for(:events, :my) %></li>
							<% if signed_in_admin? %>
<li><%= link_to 'Advertising', url_for(:users, :advertising) %></li>
							<% end %>
								<li><%= link_to 'Logout', url_for(:sessions, :destroy) %></li>
								<% else%>	
								<li><%= link_to 'Login', url_for(:sessions, :login) %></li>
					        <% end %>
              </ul>
            </div>
          </div>
        </div><!-- /.navbar -->
      </div>
      <div> <%= [:error, :warning, :success, :notice].map { |type| flash_tag(type, :class => "alert alert-#{type} fade in", :bootstrap => true) }.join.html_safe %>
      </div>
      <div class="container" id="content">
			  
	<div id="yield">
		<% if @accessible %>
      		<%= yield %>
		<% else %>
		Not accessible
		<%end %>
	<div>

      </div>
      <!-- footer -->
      <div class="footer">
      	<hr/>
        <p>Andres by pgassman - jdimeglio | 2013</p>
      </div>

    </div> 

		<%= javascript_include_tag '/assets/application' %> 
		</body>
</html>
